<Window
    x:Class="Couno.TokenSelectorWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Couno"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="TokenSelectorWindow"
    Width="800"
    Height="450"
    d:DataContext="{d:DesignInstance Type={x:Type local:TokenSelectorViewModel}}"
    mc:Ignorable="d">

    <Grid>
        <ListView
            x:Name="myListView"
            ItemsSource="{Binding AvailableAbilityTokens}"
            SelectedItem="{Binding SelectedToken, Mode=TwoWay}" />

        <Button
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Click="ConfirmClick"
            Content="Confirm" />
    </Grid>
</Window>
