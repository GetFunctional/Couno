<Window
    x:Class="GF.Couno.CardGameProtoWpf.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:GF.Couno.CardGameProtoWpf"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Window.Resources>
        <ResourceDictionary Source="pack://application:,,,/GF.Couno.CardGameProtoWpf;component/CardTemplates.xaml" />
    </Window.Resources>
    <Grid>

        <!--
            apexDragAndDrop:DragAndDrop.IsDragSource="True"
            apexDragAndDrop:DragAndDrop.IsDropTarget="True"
        -->
        <ItemsControl Background="Transparent" ItemTemplate="{StaticResource CardDataTemplate}"
                      ItemsSource="{Binding Cards}" />

    </Grid>
</Window>