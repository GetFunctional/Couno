<UserControl
    x:Class="GF.Couno.CardGameProtoWpf.RequirementSlotControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:GF.Couno.CardGameProtoWpf"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DataContext="{d:DesignInstance Type={x:Type local:RequirementViewModel}}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid
        Width="48"
        Height="48"
        Background="LightGreen">
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center">
            <Run Text="{Binding MinValue}" />
            <Run Text=" - " />
            <Run Text="{Binding MaxValue}" />
        </TextBlock>
    </Grid>
</UserControl>
